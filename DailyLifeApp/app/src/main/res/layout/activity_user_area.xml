<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.rikkereli.dailylife.UserAreaActivity">

    <Button
        android:id="@+id/bBudget"
        android:layout_width="207dp"
        android:layout_height="67dp"
        android:layout_marginTop="98dp"
        android:text="Budget"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/bLifeTracker"
        android:layout_width="212dp"
        android:layout_height="71dp"
        android:layout_marginTop="53dp"
        android:text="Life tracker"
        app:layout_constraintHorizontal_bias="0.497"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/bBudget" />

    <Button
        android:id="@+id/bSettings"
        android:layout_width="221dp"
        android:layout_height="75dp"
        android:layout_marginTop="57dp"
        android:text="Settings"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/bLifeTracker" />
</android.support.constraint.ConstraintLayout>
